{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"moduleResolution": "node",
		"outDir": "output",
		"paths": {
			"/*": ["*"],
			"//*": ["source/*"],
		},
		"removeComments": true,
		"target": "esnext",
		"typeRoots": ["./node_modules/@types", "./typings"],
	},
	"include": ["commons", "components", "source", "typings"],
}
